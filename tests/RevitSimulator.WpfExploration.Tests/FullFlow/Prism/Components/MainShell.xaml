<Window x:Class="RevitSimulator.WpfExploration.Tests.FullFlow.Prism.Components.MainShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RevitSimulator.WpfExploration.Tests.FullFlow.Prism.Components"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
        Title="MainShell" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Home" Click="NavigateHome"/>
            <Button Content="About" Click="NavigateAbout"/>
        </StackPanel>

        <!-- Main Region -->
        <ContentControl prism:RegionManager.RegionName="MainRegion" />
    </DockPanel>
</Window>
